<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<% int col = Integer.parseInt(request.getParameter("col")); //col 은 한줄에 몇개씩
	if(col>9) col = 9; //9단까지만 출력할거니깐 9가 넘으면 9로 설정
	%> 
	<% 
	for(int i=0;i<9/col;i++){ //  9/col 하면 총 몇번 반복하는지 ex) 3이면 한줄에 3개씩 총 3번 반복
														//4면 한줄에 2개씩 2번반복 하고 남은 하나 출력
		out.print("<table>");
		for(int j=1;j<=9;j++){
			out.print("<tr>");
			int last=i*col+col+2;
			if(last>9) last = 10;
			for(int k=i*col+2;k<last;k++){
				out.print(String.format("<td>%2d * %2d = %2d&nbsp</td>",k,j,j*k));
			}
			out.print("</tr>");
			//out.print("<br/>");
		}
		out.print("</table>");
		out.print("<br/>");
	}
	%>
</body>
</html>